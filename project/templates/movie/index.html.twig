{% extends 'base.html.twig' %}

{% block title %} Movies {% endblock %}

{% block body %}

<div class="example-wrapper">

   <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Type</th>
      <th scope="col">Synopsis</th>
      <th scope="col">Date de création</th>
      <th scope="col">Détails</th>
    </tr>
  </thead>
  <tbody>
    {% for movie in movies %}
    <tr class="table-dark">
      <th scope="row">{{ movie.Nom }}</th>
      <td>{{ movie.Type }}</td>
      <td>{{ movie.Synopsis }}</td>
      <td>{{ movie.Date_creation|date('d/m/Y') }}</td>
      <td><a class="nav-link" href="">Détails</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
